{
	"name": "cogni-test",
	"private": true,
	"version": "0.5.0",
	"type": "module",
	"scripts": {
		"build": "cross-env BUILD=node vite build",
		"init-db": "npx drizzle-kit push --force",
		"start": "npx drizzle-kit push --force && node index.js",
		
		"preview": "cross-env MODE=LOCAL DATABASE_URL=file:sqlite.db vite preview --host",
		"init-db-dev": "cross-env DATABASE_URL=file:sqlite.db npx drizzle-kit push --force",
		"dev": "cross-env BUILD=123 DATABASE_URL=file:sqlite.db vite dev",
		"host": "cross-env MODE=LOCAL DATABASE_URL=file:sqlite.db vite --host",
		
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"prepare": "svelte-kit sync || echo ''",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.1",
		"@fontsource/roboto": "^5.2.8",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/adapter-vercel": "^6.1.1",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/typography": "^0.5.19",
		"@types/better-sqlite3": "^7.6.13",
		"cross-env": "^10.1.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"node-gyp": "^12.1.0",
		"prettier": "3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.43.12",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.47.0",
		"vite": "^7.2.2",
		"vite-plugin-devtools-json": "^1.0.0",
		"vite-plugin-mkcert": "^1.17.9",
		"workbox-precaching": "^7.4.0"
	},
	"dependencies": {
		"@fontsource/comic-neue": "^5.2.7",
		"@fontsource/fira-code": "^5.2.7",
		"@libsql/client": "^0.15.15",
		"@tailwindcss/vite": "^4.1.17",
		"@types/web-push": "^3.6.4",
		"chart.js": "^4.5.1",
		"chartjs-plugin-annotation": "^3.1.0",
		"dotenv": "^17.2.3",
		"drizzle-kit": "^0.31.7",
		"drizzle-orm": "^0.44.7",
		"gray-matter": "^4.0.3",
		"localforage": "^1.10.0",
		"short-uuid": "^5.2.0",
		"tailwindcss": "^4.1.17",
		"web-push": "^3.6.7"
	}
}
